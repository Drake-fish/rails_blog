<h1> Create a Post</h1>

<% if @post.errors.any? %>
  <h2>Whoooaa there! Here's some errors</h2>
  <ul>
    <% @post.errors.full_messages.each do |msg| %>
    <li class="errors"><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @post do |f| %>
  <p>
    <%= f.label :title %><br/>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %><br/>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
